# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

[*.yml]
indent_size = 2

[*.scss]
indent_size = 2

[.eslintrc]
indent_size = 2

[package.json]
indent_size = 2
